general {
        output_format = "i3bar"
        colors = true
        color_good = "#44ff44"
        color_bad = "#ff6666"
        interval = 2
}

order += "ipv6"
order += "wireless _first_"
order += "ethernet _first_"
order += "volume master"
order += "battery all"
order += "disk /"
order += "memory"
order += "load"
order += "cpu_usage"
order += "tztime local"

ipv6 {
        format_up = "v6: %ip"
        format_down = ""
        separator_block_width = 15
}

wireless _first_ {
        format_up = "📶 %ip (%quality at %essid, %bitrate / %frequency)"
        format_down = ""
        separator_block_width = 15
}

ethernet _first_ {
        format_up = "🔌 %ip (%speed)"
        format_down = ""
        separator_block_width = 15
}

volume master {
        format = "%devicename: %volume"
        format_muted = "🔇%devicename: %volume"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
        separator_block_width = 15
}

battery all {
        format = "%status: %percentage[%remaining] at %consumption"
        low_threshold = 15
        threshold_type = percentage
        format_down = ""
        separator_block_width = 15
		status_bat = "🔋"
		status_chr = "⚡"
}

disk "/" {
        format = "💾 %used / %total [%percentage_used]"
        low_threshold = 5
        threshold_type = percentage_free
        format_below_threshold = "💾: %percentage_used used, %avail left"
        separator_block_width = 15
}

memory {
        format = "🐏 %used / %total [%percentage_used]"
        threshold_degraded = "1G"
        threshold_critical = "512M"
        format_degraded = "🐏: %percentage_used used, %available left"
        separator_block_width = 15
}

load {
        format = "%1min"
        max_threshold = "6"
        separator_block_width = 15
}

cpu_usage {
        format = "%usage"
        max_threshold = 95
        degraded_threshold = 75
        format_above_threshold = "HIGH CPU USAGE: %usage"
        format_above_degraded_threshold = "HIGH CPU USAGE: %usage"
        separator_block_width = 15
}

tztime local {
        format = "%d %a %H:%M"
        separator_block_width = 15
}
